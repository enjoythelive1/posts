<html>
    <head>
        <title><%=post.title%>-Post de solo Lectura :D </title>
        <link rel="stylesheet" href="/css/style.css" type="text/css">
    </head>
    <body>
        <h1 class="page-title">Post de Solo Lectura</h1>
        <section class="post">
            <h2 class="post-title"><%=post.title%> <small>by <%=post.author%></small></h2>
            <article class="post-body">
                <%=post.description%>
            </article>

            <aside class="tags">
                <h3>Tags</h3>
                <ul class="post-tags-list">
                    <% for tag in post.tags %>
                        <li class="tag" ><%=tag %></li>
                    <% end %>
                </ul>
            </aside>
        </section>

    </body>

</html>
