<html>
    <head>
        <title>Post con el Tag <%=tag%>-Post de solo Lectura :D </title>
        <link rel="stylesheet" href="/css/style.css" type="text/css">
    </head>
    <body>
        <h1 class="page-title">Post de Solo Lectura</h1>
        <section class="tag-posts posts">
            <h2 class="tag-posts-title posts-title">Post con el Tag <%=tag%></h2>
            <div class="post-list">
                <% for post in posts %>
                <article class="post-list-item">
                    <h3><%=post.title%> <small>by <%=post.author%></small></h3>
                    <p class="description-summary">
                        <%=post.description_summary%>
                    </p>
                     <div class="tags">
                        <ul class="post-tags-list">
                            <% for tag in post.tags %>
                                <li class="tag" ><%=tag %></li>
                            <% end %>
                        </ul>
                    </div>
                </article>
                <% end %>
            </div>
        </section>

    </body>

</html>
